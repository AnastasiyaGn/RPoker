<Window x:Class="View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="Template1">
            <Image Source="Resources/cardDiamondsA.png"/>
        </DataTemplate>

        <DataTemplate x:Key="Template2">
            <Image Source="Resources/cardDiamondsc10.png" />
        </DataTemplate>

        <DataTemplate x:Key="Template3">
            <Image Source="Resources/cardDiamondsc2.png" />
        </DataTemplate>

        <local:BalanceTypesTemplateSelector x:Key="CardTemplateSelector"
                                           Template1="{StaticResource Template1}"
                                           Template2="{StaticResource Template2}"
                                           Template3="{StaticResource Template3}"/>

    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding Path=Card}" 
                        ContentTemplateSelector="{StaticResource CardTemplateSelector}">
        </ContentControl>
    </Grid>
</Window>
