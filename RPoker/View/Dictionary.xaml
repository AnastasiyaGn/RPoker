<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:View.TemplateSelectors">
    <Style x:Key="ImageSizeStyle" TargetType="Image">
        <Setter Property="Height" Value="120"/>
        <Setter Property="Width" Value="100"/>
    </Style>
    <Style x:Key="PlayerSquareStyle" TargetType="Border">
        <Setter Property="Height" Value="100"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="3,3,3,3"/>
    </Style>

    <SolidColorBrush x:Key="TableColor" Color="DarkGreen"/>
	<SolidColorBrush x:Key="TableBorderColor" Color="Gray"/>
	<SolidColorBrush x:Key="BackgroundColor" Color="SaddleBrown"/>
	<SolidColorBrush x:Key="CardBorderColor" Color="White"/>

	<Style x:Key="CardBorderStyle" TargetType="Border">
		<Setter Property="Width" Value="120"/>
		<Setter Property="Height" Value="142"/>
		<Setter Property="Margin" Value="5,0,0,0"/>
		<Setter Property="BorderThickness" Value="5"/>
		<Setter Property="BorderBrush" Value="{StaticResource CardBorderColor}" />
		<Setter Property="Background" Value="{StaticResource TableColor}"/>
	</Style>
    <Style x:Key="PlayerCardBorderStyle" TargetType="Border">
    </Style>

    <Style x:Key="CardStyle" TargetType="ContentControl">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="TableStyle" TargetType="Border">
		<Setter Property="CornerRadius" Value="80"/>
		<Setter Property="Background" Value="{StaticResource TableColor}"/>
		<Setter Property="BorderThickness" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource TableBorderColor}"/>
        <!--<Setter Property="" Value=""/>-->
	</Style>

